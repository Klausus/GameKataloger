<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#dce1e3"
        android:padding="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClickNotImplemented">

            <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton1"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:src="@drawable/add"
                    android:scaleType="fitCenter"
                    android:background="@drawable/transparent"
                    android:clickable="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/addgame"
                    android:layout_gravity="center"
                    android:singleLine="false"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClickNotImplemented">

            <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:src="@drawable/games"
                    android:scaleType="fitCenter"
                    android:background="@drawable/transparent"
                    android:clickable="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center"
                    android:text="@string/games"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClickNotImplemented">

            <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:src="@drawable/wishlist"
                    android:scaleType="fitCenter"
                    android:focusableInTouchMode="false"
                    android:clickable="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/wishlist"
                    android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="onClickNotImplemented">

            <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton4"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/transparent"
                    android:src="@drawable/consoles"
                    android:clickable="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/consoles"
                    android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_margin="2dp">

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/GIT/GameKataloger/Game%20Kataloger/src/main/res/layout/activity_main.xml -->